<% include ./partials/header.ejs %>

    <div id="containerWidth" class="ui main container segment">
        <div class="ui huge header">Edit "<%= blog.title %>"</div>
        <form class="ui form" action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input placeholder="title" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>Image</label>
                <input placeholder="image" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="field">
                <label>Content</label>
                <textarea name="blog[body]"><%=blog.body%></textarea>
            </div>
            <button class="ui large violet button">Submit</button>
        </form>
    </div>

<% include ./partials/footer.ejs %>